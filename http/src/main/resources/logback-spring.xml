<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="plain" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>false</withJansi>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta(%-4relative) --- [ %thread{10} ] %replace([%X{CorrelationId}]){'^\[\] $',''} %cyan(%logger{40}:%L) : %msg%n</pattern>
    </encoder>
  </appender>

  <springProfile name="default">
    <root>
      <appender-ref ref="plain" />
    </root>
  </springProfile>
</configuration>
